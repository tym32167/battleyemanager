@page
@model BattlEyeManager.Web.Pages.SamplePageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@Model.Title</title>
</head>
<body>

<table>
    <tr>
        <th></th>
        <th>Name</th>
    </tr>       
        
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
        </tr>
    }
</table>

<form asp-page-handler="Add" method="post">
    <label asp-for="@Model.ItemToAdd.Name">@nameof(Model.ItemToAdd.Name)</label>
    <input asp-for="@Model.ItemToAdd.Name"/>
    <span asp-validation-for="@Model.ItemToAdd.Name"></span> <br />
    <input type="submit" value="Add" />
</form>

</body>
</html>

